import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here

        Scanner sc = new Scanner(System.in);
        
        int tests = sc.nextInt();
        
        while(tests-->0){
            
            int n = sc.nextInt();
            int count = 0;
            
            int level = 0;
            
            while(count<=n){
                count = count + level;
                
                if(count>n)
                    break;
                    
                level++;
            }
            
            System.out.println(level-1);
            
        }
        
        
        sc.close();
        
	}
}
