class Solution {

    private int helper(ArrayList<Integer> array, int n){
        if(n==1)
            return array.get(0);

        int curr = n;
        while(curr>1){
            
            ArrayList<Integer> newarray = new ArrayList<Integer>();
            n = curr;
            curr = 0;
            for(int i=0;i<n-1;i++){
                newarray.add( (array.get(i) + array.get(i+1) ) % 10);
                curr++;
            }

            array = newarray;
        }

        return array.get(0);
    }

    public int triangularSum(int[] nums) {
        
        ArrayList<Integer> array = new ArrayList<Integer>();

        for(int n: nums)
            array.add(n);

        return helper(array, array.size());
    }
}
