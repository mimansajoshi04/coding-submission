class Solution {
    public int[] findDiagonalOrder(int[][] mat) {
        int rows = mat.length;
        int cols = mat[0].length;
        int[] answer;
        answer = new int[rows*cols];
        int m = 0;
        for(int i=0;i<=rows +cols;i++){
            if(i%2==0){
                for(int k=0;k<cols;k++){
                    for(int j =0 ; j<rows;j++){
                        if( k + j == i){
                            answer[m] = mat[j][k];
                            m++;
                        }
                    }
                }
            }else{
                for(int k=0;k<rows;k++){
                    for(int j =0 ; j<cols;j++){
                        if( k + j == i){
                            answer[m] = mat[k][j];
                            m++;
                        }
                    }
                }
            }
        }
        return answer;
    }
}
